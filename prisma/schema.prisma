generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

model User {
    id        String    @id @default(uuid())
    clerkId   String    @unique
    username  String?
    email     String?
    password  String?
    createdAt DateTime  @default(now())
    lastLogin DateTime?
    bio       String?
    avatar    String?
    tips      Tip[]
    comments  Comment[]
    ratings   Rating[]
}

model Tip {
    id        String     @id @default(uuid())
    userId    String
    title     String
    content   String
    createdAt DateTime   @default(now())
    updatedAt DateTime   @updatedAt
    user      User       @relation(fields: [userId], references: [id])
    category  Category[]
    comments  Comment[]
    ratings   Rating[]
    pictures  Pictures[]
}

model Pictures {
    id    String @id @default(uuid())
    url   String
    tipId String
    tip   Tip    @relation(fields: [tipId], references: [id])
}

model Category {
    id   String @id @default(uuid())
    name String @unique
    Tip  Tip[]
}

model Comment {
    id        String   @id @default(uuid())
    tipId     String
    userId    String
    content   String
    createdAt DateTime @default(now())
    tip       Tip      @relation(fields: [tipId], references: [id])
    user      User     @relation(fields: [userId], references: [id])
}

model Rating {
    id        String   @id @default(uuid())
    tipId     String
    userId    String
    positive  Boolean
    createdAt DateTime @default(now())
    tip       Tip      @relation(fields: [tipId], references: [id])
    user      User     @relation(fields: [userId], references: [id])
}
