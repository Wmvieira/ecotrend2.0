generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

model User {
    id                  String     @id @default(uuid())
    clerkId             String     @unique
    username            String?
    email               String?
    createdAt           DateTime   @default(now())
    lastLogin           DateTime?
    avatar              String?
    tips                Tip[]
    comments            Comment[]
    ratings             Rating[]
    followingUsers      User[]     @relation("UserFollows")
    followedByUsers     User[]     @relation("UserFollows")
    followingCategories Category[] @relation("UserCategories")
}

model Tip {
    id        String     @id @default(uuid())
    userId    String
    title     String
    content   String
    createdAt DateTime   @default(now())
    updatedAt DateTime   @updatedAt
    user      User       @relation(fields: [userId], references: [id])
    category  Category[]
    comments  Comment[]
    ratings   Rating[]
    pictures  Pictures[]
}

model Pictures {
    id    String @id @default(uuid())
    url   String
    tipId String
    tip   Tip    @relation(fields: [tipId], references: [id])
}

model Category {
    id              String @id @default(uuid())
    name            String @unique
    tip             Tip[]
    followedByUsers User[] @relation("UserCategories")
}

model Comment {
    id        String   @id @default(uuid())
    tipId     String
    userId    String
    content   String
    createdAt DateTime @default(now())
    tip       Tip      @relation(fields: [tipId], references: [id])
    user      User     @relation(fields: [userId], references: [id])
}

model Rating {
    id        String   @id @default(uuid())
    tipId     String
    userId    String
    positive  Boolean
    createdAt DateTime @default(now())
    tip       Tip      @relation(fields: [tipId], references: [id])
    user      User     @relation(fields: [userId], references: [id])
}
